@model Library.MVC.Models.LoanCreateVm;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Loan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MemberList" class="control-label"></label>
                @Html.DropDownListFor(m => m.MemberId, Model.MemberList, "Choose member")
            </div>
            <div class="form-group">
                <label asp-for="AvailableBooksList" class="control-label"></label>
                @Html.DropDownListFor(m => m.BookCopyId, Model.AvailableBooksList, "Choose book")
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}