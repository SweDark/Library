@model Library.MVC.Models.LoanDetailsVm;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Loan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LoanDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoanDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        @if (Model.Returned == false)
        {
            int loandays = ((TimeSpan)(Model.CurrentDate - Model.LoanDate)).Days;
            if (loandays > 14)
            {
                <dd class="col-sm-10">
                    <p class="text-danger">Not yet returned - Overdue</p>
                </dd>
            }
            else
            {
                <dd class="col-sm-10">
                    <p class="text-warning">Not yet Returned</p>
                </dd>
            }
        }
        else
        {
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReturnDate)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.member.Name)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Members" asp-action="Details" asp-route-id="@Model.member.Id">@Html.DisplayFor(model => model.member.Name)</a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.member.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.member.Email)
        </dd>
        <dt class="col-sm-2">
            <p>Book-ID: </p>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bookCopy.Id)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
